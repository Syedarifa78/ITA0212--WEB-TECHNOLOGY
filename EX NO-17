            /* CONTENT */
            background-color: #fff;

            /* PADDING */
            padding: 20px;

            /* BORDER */
            border: 8px solid #ff5722;

            /* MARGIN */
            margin: 50px auto;

            border-radius: 15px;
            box-shadow: 0px 0px 20px black;
            text-align: center;
        }

